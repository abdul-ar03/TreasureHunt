<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:gravity="center_vertical|center_horizontal"
    android:maxHeight="700dp"
    android:maxWidth="400dp"
    android:minWidth="300dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_brown_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="Add Clues"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/clue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center_vertical"
        android:text="Enter Some Clue"
        android:textColor="@color/orange"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edittxt_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/dialog_editext_border"
        android:clickable="true"
        android:ems="10"
        android:focusable="true"
        android:gravity="left"
        android:inputType="textMultiLine"
        android:maxHeight="420dp"
        android:maxLength="3000"
        android:maxLines="3"
        android:minHeight="34dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/brown"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/text_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_brown_border"
        android:text="Add"
        android:textColor="#ffffffff"
        android:textSize="24sp" />

</LinearLayout>