<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_border"
    android:gravity="center_vertical|center_horizontal"
    android:maxHeight="700dp"
    android:maxWidth="400dp"
    android:minWidth="300dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_brown_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:text="Add Contest"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/file_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="File Name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/orange"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edittxt_dialog_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-7dp"
        android:background="@drawable/dialog_editext_border"
        android:ems="10"
        android:gravity="bottom|left"
        android:inputType="textPersonName"
        android:maxHeight="60dp"
        android:maxLength="30"
        android:maxLines="1"
        android:minHeight="34dp"
        android:minLines="3"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/brown"
        android:textCursorDrawable="@null"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/contest_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:gravity="left|center_vertical"
        android:text="Contest Name"
        android:textColor="@color/orange"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edittxt_dialog_contestname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-7dp"
        android:background="@drawable/dialog_editext_border"
        android:ems="10"
        android:gravity="bottom|left"
        android:inputType="textPersonName"
        android:maxHeight="60dp"
        android:maxLength="30"
        android:maxLines="1"
        android:minHeight="34dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/brown"
        android:textColorHint="#959595"
        android:textCursorDrawable="@null"
        android:textSize="22sp" />


    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/text_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_brown_border"
        android:text="@string/Add"
        android:textColor="#ffffffff"
        android:textSize="24sp" />

</LinearLayout>